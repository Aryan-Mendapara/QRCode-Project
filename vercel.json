{
  "version": 2,
  "projects": {
    "frontend": {
      "root": "client"
    },
    "backend": {
      "root": "server"
    }
  },
  "builds": [
    { "src": "client/package.json", "use": "@vercel/next" },
    { "src": "server/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/$1.js" }
  ]
}
